<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@drawable/cover_8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:background="#F4F5FA">

        <TextView
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:rotationX="15"
            android:text="漂流计划（书名）"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_host_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:rotation="0"
            android:rotationX="10"
            android:rotationY="0"
            android:text="发起人：xx"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:rotationX="0"
            android:text="发起时间：2022年12月22日"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/book_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:rotationX="-5"
            android:text="发起主题：xxx"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:rotationX="-15"
            android:text="此前接龙人（11位）："
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/book_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:id="@+id/refuse_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="放弃接龙"
                android:layout_gravity="center"
                android:background="#D5DAF1"/>
            <Button
                android:id="@+id/agreeToBtn"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="参与接龙"
                android:layout_gravity="center"
                android:background="#D5DAF1"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
